{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@icons/*": ["src/assets/icons/*"],
      "@pictures/*": ["src/assets/pictures/*"],
      "@sections/*": ["src/shared/sections/*"],
      "@components/*": ["src/shared/components/*"],
      "@ui/*": ["src/shared/components/ui/*"],
      "@content/*": ["src/content/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"]
    }
  }
}
