---

<section class="md:px-xxxl py-xl px-l">
  <H4 class="font-medium">Escoje la terapia que mejor se adapte a ti</H4>
  <div class="flex">
    <button class="swiper-button-prev-unique"> </button>
    <div class="swiper">
      <div class="swiper-wrapper">
        {
          cardsContent.map((card) => (
            <li class="swiper-slide">
              <SummaryTherapyCard
                id={card.title}
                title={`Terapia ${card.title}`}
                price={card.inPersonPrice}
                time={card.inPersonTimeInMinutes}
                details={[
                  "Manejo de la utoestima",
                  "LÃ­mites y asertividad",
                  "Dependencia emocional",
                ]}
              />
            </li>
          ))
        }
      </div>
    </div>
    <button class="swiper-button-next-unique">
      <Clock />
    </button>
  </div>
</section>

<style>
  .swiper-button-next-unique,
  .swiper-button-prev-unique {
    width: 24px;
    height: 24px;
  }

  .swiper-button-next-unique::after,
  .swiper-button-next-unique::after {
    content: "";
  }

  .swiper-pagination-bullet {
    width: 40px;
    height: 40px;
  }
</style>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
></script>

<script type="module">
  import Swiper from "https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs";

  new Swiper(".swiper", {
    slidesPerView: 1,
    spaceBetween: 40,
    navigation: {
      prevEl: ".swiper-button-prev-unique",
      nextEl: ".swiper-button-next-unique",
    },
    breakpoints: {
      20: {
        slidesPerView: 1,
        spaceBetween: 20,
      },
      640: {
        slidesPerView: 2,
        spaceBetween: 40,
      },
      768: {
        slidesPerView: 3,
        spaceBetween: 40,
      },
    },
  });
</script>
