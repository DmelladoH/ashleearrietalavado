---
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@lib/utils';
import type { HTMLAttributes } from 'astro/types';

const buttonVariants = cva(
  'px-l w-full rounded-rounded flex gap-s justify-center align-middle',
  {
    variants: {
      variant: {
        primary:
          'bg-action05 hover:bg-action04 active:bg-action06 py-[12px] text-white',
        secondary:
          'bg-transparent border-2 hover:bg-neutral02 border-main06 py-m text-body font-medium leading-action text-main06 ',
      },
    },
    defaultVariants: {
      variant: 'primary',
    },
  }
);

interface ButtonProps
  extends HTMLAttributes<'a'>,
    VariantProps<typeof buttonVariants> {}

const { variant, class: className, ...props } = Astro.props as ButtonProps;
---

<a class={cn(buttonVariants({ variant, className }))} {...props}>
  <slot />
</a>
