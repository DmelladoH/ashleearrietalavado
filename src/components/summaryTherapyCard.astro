---
import Clock from "@icons/clock.astro";
import BadgeSmall from "./badgeSmall.astro";
import H3 from "./h3.astro";
import List from "./list.astro";

const { id, title, price, time, details } = Astro.props;
---

<article
  class="py-m px-l bg-neutral03 border-main06 border-2 rounded-default h-full"
>
  <a
    href=`/terapias#${id}`
    aria-label=`ver detalles de la terapia ${title}`
    class="h-full"
  >
    <div class="flex flex-col h-full">
      <H3>{title}</H3>
      <div class="flex gap-s align-middle items-center mt-2">
        <BadgeSmall price={price} />
        <div class="flex gap-xxs">
          <div class="h-6 w-6">
            <Clock />
          </div>
          <p class="text-info font-light">
            <span class="text-h4 font-medium text-main09">{time}</span> min
          </p>
        </div>
      </div>
      <div class="my-6 flex-grow">
        <List>
          {
            details.map((detail) => (
              <li>
                <p>{detail}</p>
              </li>
            ))
          }
        </List>
      </div>
      <span
        class="text-action font-medium underline text-main07 underline-offset-4"
        >Saber m√°s</span
      >
    </div>
  </a>
</article>
