---
import ChevronRight from '@icons/chevronRight.astro';
---

<div class="flex mt-8">
  <div class="flex items-center p-s">
    <button
      type="button"
      class="swiper-button-prev-unique"
      aria-label="mover carrusel a la izquierda"
    >
      <ChevronRight class="rotate-180" />
    </button>
  </div>
  <div class="swiper">
    <div class="swiper-wrapper">
      <slot />
    </div>
  </div>
  <div class="flex items-center p-s">
    <button
      type="button"
      class="swiper-button-next-unique"
      aria-label="mover carrusel a la derecha"
    >
      <ChevronRight />
    </button>
  </div>
</div>

<style>
  .swiper-button-next-unique,
  .swiper-button-prev-unique {
    width: 24px;
    height: 24px;
  }

  .swiper-button-next-unique::after,
  .swiper-button-next-unique::after {
    content: '';
  }

  .swiper-pagination-bullet {
    width: 40px;
    height: 40px;
  }
</style>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
></script>

<script type="module" transition:persist>
  import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs';
  let swipeInstance;

  document.addEventListener('astro:page-load', () => {
    if (swipeInstance) {
      swipeInstance.destroy(true, true);
    }

    swipeInstance = new Swiper('.swiper', {
      slidesPerView: 1,
      spaceBetween: 16,
      loop: true,
      navigation: {
        prevEl: '.swiper-button-prev-unique',
        nextEl: '.swiper-button-next-unique',
      },
      breakpoints: {
        20: {
          slidesPerView: 1,
          spaceBetween: 16,
        },
        600: {
          slidesPerView: 2,
          spaceBetween: 16,
        },
        800: {
          slidesPerView: 3,
          spaceBetween: 16,
        },
      },
    });
  });
</script>
