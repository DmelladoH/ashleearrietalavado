---
import Whatsapp from "@icons/whatsapp.astro";
import PrimaryButton from "./primaryButton.astro";
import { personalData } from "@content/personalData";
---

<PrimaryButton
  href={`https://wa.me/${personalData.countryPhoneCode}${personalData.phone.replace(/\s+/g, "")}`}
  target="_blank"
>
  <div slot="icon" class="w-6 h-6">
    <Whatsapp />
  </div>
  <span slot="text" class="font-medium">Contactar</span>
</PrimaryButton>
